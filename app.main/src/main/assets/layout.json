            "data": {},
            "styles": {}
        },
        {
            "name": "home",
            "view": {
                "type": "RelativeLayout",
                "layout_width": "match_parent",
                "layout_height": "match_parent",
                "children": [
                    {
                        "type": "Toolbar",
                        "id": "toolbar",
                        "layout_width": "match_parent",
                        "layout_height": "56dp",
                        "backgroundColor": "@color/colorPrimary"
                    },
                    {
                        "type": "DrawerLayout",
                        "layout_width": "match_parent",
                        "layout_height": "match_parent",
                        "id": "drawer",
                        "layout_below": "toolbar",
                        "children": [
                            {
                                "type": "LinearLayout",
                                "layout_width": "match_parent",
                                "layout_height": "match_parent",
                                "orientation": "vertical",
                                "children": [
                                    {
                                        "type": "CardView",
                                        "layout_width": "match_parent",
                                        "layout_height": "46dp",
                                        "children": [
                                            {
                                                "type": "RelativeLayout",
                                                "layout_width": "match_parent",
                                                "layout_height": "match_parent",
                                                "children": [
                                                    {
                                                        "type": "Icon",
                                                        "id": "search",
                                                        "icon": "cmd_magnify",
                                                        "layout_width": "44dp",
                                                        "layout_height": "match_parent",
                                                        "iconColor": "#555555",
                                                        "size": "10dp",
                                                        "padding": "10dp",
                                                        "layout_alignParentLeft": "true"
                                                    },
                                                    {
                                                        "type": "CustomEditText",
                                                        "layout_width": "match_parent",
                                                        "layout_height": "match_parent",
                                                        "hint": "Search...",
                                                        "layout_toRightOf": "search",
                                                        "layout_toLeftOf": "scan",
                                                        "singleLine": "true"
                                                    },
                                                    {
                                                        "type": "Icon",
                                                        "id": "scan",
                                                        "icon": "cmd_barcode",
                                                        "iconColor": "#555555",
                                                        "size": "10dp",
                                                        "padding": "10dp",
                                                        "layout_width": "44dp",
                                                        "layout_height": "match_parent",
                                                        "layout_alignParentRight": "true"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "type": "NavigationView",
                                "layout_width": "wrap_content",
                                "layout_height": "match_parent",
                                "id": "navigation_view"
                            }
                        ]
                    }
                ]
            },
            "data": {},
            "styles": {},
            "config": {
                "topMenu": "topmenu",
                "sideBarMenu": "sidebar"
            },
            "menus": {
                "topmenu": [
                    {
                        "title": "Notification",
