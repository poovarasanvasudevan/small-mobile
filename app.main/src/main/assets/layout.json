                    {
                        "title": "Shopping Cart",
                        "id": "cart",
                        "showaction": "always",
                        "icon": "cmd_cart",
                        "visibility": "true",
                        "align": "",
                        "onClick": ""
                    }
                ],
                "sidebar": [
                    {
                        "title": "Your Orders",
                        "id": "yourorders",
                        "icon": "cmd_shopping",
                        "visibility": "true"
                    },
                    {
                        "title": "Your Wishlist",
                        "id": "yourwishlist",
                        "icon": "cmd_shopping",
                        "visibility": "true"
                    },
                    {
                        "title": "Account Settings",
                        "id": "account",
                        "icon": "cmd_account_circle",
                        "visibility": "true"
                    },
                    {
                        "title": "Notification Settings",
                        "id": "account",
                        "icon": "cmd_bell",
                        "visibility": "true"
                    },
                    {
                        "title": "Help",
                        "id": "account",
                        "icon": "cmd_help",
                        "visibility": "true"
                    }
                ]
            }
        },
        {
            "name": "notificationsettings",
            "view": {
                "type": "LinearLayout",
                "layout_width": "match_parent",
                "layout_height": "match_parent",
                "orientation": "vertical",
                "children": [
                    {
                        "type": "AppBarLayout",
                        "id": "appbar",
                        "layout_width": "match_parent",
                        "layout_height": "56dp",
                        "children": [
                            {
                                "type": "Toolbar",
                                "id": "toolbar",
                                "layout_width": "match_parent",
                                "layout_height": "match_parent",
                                "elevation": "4dp"
                            }
                        ]
                    },
                    {
                        "type": "LinearLayout",
                        "layout_width": "match_parent",
                        "layout_height": "match_parent",
                        "orientation":"vertical",
                        "children": [
                            {
                                "type": "MaterialPrefCategory",
                                "layout_width": "match_parent",
                                "layout_height": "wrap_content",
                                "cardElevation": "0dp",
                                "cardCornerRadius": "0dp",
                                "cardMaxElevation": "0dp",
                                "title": "Product Notification",
                                "children": [
                                    {
                                        "type": "MaterialSwitch",
                                        "layout_width": "match_parent",
                                        "layout_height": "wrap_content",
                                        "key": "pnotifiy1|true",
                                        "title": "Notifiy New Product",
                                        "summary": "Notifiy me on New Products",
                                        "icon": "cmd_bell_ring"
                                    },
                                    {
                                        "type": "MaterialCheckbox",
                                        "layout_width": "match_parent",
                                        "layout_height": "wrap_content",
                                        "key": "magazinenotification|true",
                                        "title": "Notify about Magazine",
                                        "summary": "Notify me on Magazine Related News",
                                        "icon": "cmd_book"
                                    }
                                ]
                            },
                            {
                                "type": "Divider",
                                "layout_width": "match_parent",
                                "layout_height": "1dp"
                            },
                            {
                                "type": "MaterialPrefCategory",
                                "layout_width": "match_parent",
                                "layout_height": "wrap_content",
                                "cardElevation": "0dp",
                                "cardCornerRadius": "0dp",
                                "cardMaxElevation": "0dp",
                                "title": "Order Notification",
                                "children": [
                                    {
                                        "type": "MaterialSwitch",
                                        "layout_width": "match_parent",
                                        "layout_height": "wrap_content",
                                        "key": "onotifiy1|true",
                                        "title": "Notify My Order Status",
                                        "summary": "Notifies All Related Activity about Your Orders",
                                        "icon": "cmd_bell_ring"
                                    }
                                ]
                            },
                            {
                                "type": "Divider",
                                "layout_width": "match_parent",
                                "layout_height": "1dp"
                            },
                            {
                                "type": "MaterialPrefCategory",
                                "layout_width": "match_parent",
                                "layout_height": "wrap_content",
                                "cardElevation": "0dp",
                                "cardCornerRadius": "0dp",
                                "cardMaxElevation": "0dp",
                                "title": "Newsletter",
                                "children": [
                                    {
                                        "type": "MaterialSwitch",
                                        "layout_width": "match_parent",
                                        "layout_height": "wrap_content",
                                        "key": "newsletter|true",
                                        "title": "Subscribe for Newsletter",
                                        "icon": "cmd_newspaper"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
